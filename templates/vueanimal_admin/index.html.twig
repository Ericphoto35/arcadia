{% extends 'base.html.twig' %}

{% block title %}Hello VueanimalAdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>View Counts for Pages</h1>
{% if viewCounts is empty %}
    <p>No view count data available.</p>
{% else %}
    <ul>
        {% for pageId, viewCount in viewCounts %}
            <li>Page: {{ pageId }} - Views: {{ viewCount }}</li>
        {% endfor %}
    </ul>
{% endif %}

</div>
{% endblock %}
