{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		body {
			background-color: #26413c;
		}
	</style>
	{% if error %}
		<div class="container d-flex justify-content-center">
			<div class="alert alert-danger text-white d-flex mx-auto">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		</div>
	{% endif %}

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="container d-flex justify-content-center">
				<div class="alert alert-{{ label }} text-white d-flex mx-auto">
					{{ message }}
				</div>
			</div>
		{% endfor %}
	{% endfor %}
	<div class="container vh-100 text-white ">
		<h1 class="text-center mb-4">Login</h1>
		<form class="row col-6 mx-auto" action="{{ path('app_login') }}" method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}">
			<label for="password">Mot de passe:</label>
			<input type="password" id="password" name="_password">
			<input type="hidden" name="_target_path" value="/admin">
			<button class="btn btn-dark mt-4" type="submit">login</button>
		</form>
	</div>
{% endblock %}
