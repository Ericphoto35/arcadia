{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		body {
			background-color: #26413c;
		}
	</style>

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="container vh-100 text-white">
		<h1 class="text-center mb-4">Login</h1>
		<form class="row col-6 mx-auto" action="{{ path('app_login') }}" method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}">
			<label for="password">Mot de passe:</label>
			<input type="password" id="password" name="_password">
			<input type="hidden" name="_target_path" value="/">    
		<button class="row col-2 mx-auto mt-2" type="submit">login</button>
        {% if is_granted('ROLE_ADMIN') %}
			<div class="text-center p-4">
				<a href="/admin" class="btn btn-dark">Administration</a>
			</div>
		{% endif %}
        </form>       
	</div>
{% endblock %}
