<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
		{% block head %}
			<style>
				body {
					background-color: #26413c;
					height: auto;
				}

				.cardhabitat {
					background-color: #3e505b;
				}

				.cardsmall {
					background-color: #8ab0ab;
				}

				.img-hover:hover {
					/* Adjust opacity value for desired transparency on hover */
					transition: opacity 0.3s ease-in-out; /* Add a smooth transition effect */
				}

				.carouselcolor {
					background-color: #3e505b;
				}
				.horairecolor {
					background-color: #3e505b;
				}
				.servicescolor {
					background-color: #3e505b;
				}
				.animal-name-overlay {
					background-color: rgba(0, 0, 0, 0.5);
					color: white;
					font-size: 1.2rem;
					padding: 8px 12px;
					text-align: center;
					opacity: 0;
					transition: opacity 0.2s ease;
				}

				.img-hover:hover .animal-name-overlay {
					opacity: 1;
				}
				.animauxcenter {
					margin: auto;
				}
				h2 {
					color: #8ab0ab;
				}
				.titreanimaux {
					color: #e9d594;
					text-decoration: underline;
					text-transform: uppercase;
				}
			</style>
		</head>
		<body>
			{# HEADER #}
			<header>
				<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
					<div class="container">
						<div class="d-flex flex-wrap align-items-center justify-content-between">
							<div class="d-flex align-items-center me-2">
								<a href="/" class="d-flex align-items-center mb-2 mb-lg-0">
									<img src="{{ asset('assets/image/arcadia3.png')}}" alt="logo arcadia" class="w-25 h-25">
								</a>
								<button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
									<span class="navbar-toggler-icon"></span>
								</button>
							</div>

							<div class="collapse navbar-collapse d-lg-block" id="navbarSupportedContent">
								<ul class="nav nav-pills ms-auto mb-2 mb-lg-0 ">
									<li>
										<a href="/" class="px-2 text-white nav-link">Accueil</a>
									</li>
									<li>
										<a href="/services" class="nav-link px-2 text-white">Services</a>
									</li>
									<li>
										<a href="/habitats" class="nav-link px-2 text-white">Habitats</a>
									</li>

									<li>
										<a href="/contact" class="nav-link px-2 text-white">Contact</a>
									</li>
									<li>
										<a href="/login" class="nav-link px-2 text-white">Login</a>
									</li>
									{% if is_granted('ROLE_ADMIN') %}
										<li>
											<a href="/admin" class="nav-link px-2 text-white">Admin</a>
										</li>
									{% endif %}
									{% if is_granted('ROLE_EMP') %}
										<li>
											<a href="/emp" class="nav-link px-2 text-white">Employé</a>
										</li>
									{% endif %}
									{% if is_granted('ROLE_VETO') %}
										<li>
											<a href="/login" class="nav-link px-2 text-white">Vétérinaire</a>
										</li>
									{% endif %}
								</ul>

							</div>
						</div>
					</div>
				</nav>
			</header>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block footer %}
			#
			{# FOOTER #}
			<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 bottom bg-dark">

				<a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
					<img src="{{ asset('assets/image/arcadia3.png')}}" alt="logo arcadia" class="w-25 h-25">
				</a>
				<div class="col-md-4 d-flex justify-content-center mb-3 mb-md-0 text-center mx-auto">
					<a href="#" class="me-3 text-white">Mentions légales</a>
					<a href="#" class="text-white">Confidentialité</a>
				</div>
			</footer>
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>
